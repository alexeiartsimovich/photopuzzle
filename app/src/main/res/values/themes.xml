<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.SlidingPuzzle" parent="Theme.MaterialComponents">
        <item name="android:windowBackground">@drawable/background_art</item>
        <item name="colorPrimary">#541B95</item>
        <item name="colorPrimaryVariant">#3C116C</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">#ECBF37</item>
        <item name="colorSecondaryVariant">#ECAA37</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">#00000000</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowFullscreen">false</item>
        <item name="materialButtonStyle">@style/Theme.SlidingPuzzle.Button</item>
    </style>

    <style name="Theme.SlidingPuzzle.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">#E89C04</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">12dp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>