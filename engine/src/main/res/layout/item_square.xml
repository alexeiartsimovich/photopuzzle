<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        android:id="@+id/square_image"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintWidth_max="48dp"
        app:layout_constraintWidth_min="12dp"
        android:id="@+id/number_text_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:padding="2dp"
        android:textSize="16dp"
        android:gravity="center"
        android:textColor="?colorOnSecondary"
        app:autoSizeMaxTextSize="16dp"
        app:autoSizeMinTextSize="4dp"
        app:autoSizeTextType="uniform"
        app:autoSizeStepGranularity="0.1dp"
        android:textAppearance="?textAppearanceCaption"
        android:includeFontPadding="false"
        android:background="@drawable/bg_square_number"
        tools:ignore="SpUsage"
        tools:text="15"/>
</androidx.constraintlayout.widget.ConstraintLayout>